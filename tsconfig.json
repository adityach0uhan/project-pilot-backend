{
  "compilerOptions": {
    "target": "es2020",
    "module": "Node16",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "Node16",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
